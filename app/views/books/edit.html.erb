<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>
  <% if @book.errors.any? %>
    <div class="alert">
      <h4>
        <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
      </h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", '/books' %>
<% end %>